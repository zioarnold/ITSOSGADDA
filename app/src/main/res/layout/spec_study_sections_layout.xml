<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SpecStorySectionActivity">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:text="@string/i_percorsi"
            android:id="@+id/courses_id"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/lyceum_button"
            android:textColor="#000"
            android:id="@+id/lyceum_button"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/courses_id"
            android:layout_centerHorizontal="true"
            android:background="#ffff33"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/spec_IT_TLC_button"
            android:textColor="#000"
            android:id="@+id/spec_IT_TLC_Button"
            android:layout_below="@+id/lyceum_button"
            android:layout_centerHorizontal="true"
            android:background="#4169E1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/spec_Economy_button"
            android:textColor="#000"
            android:id="@+id/spec_economy_button"
            android:layout_below="@+id/spec_IT_TLC_Button"
            android:layout_centerHorizontal="true"
            android:background="#FF6347"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/op_mech_elet_button"
            android:textColor="#000"
            android:id="@+id/elet_mech_id_button"
            android:layout_below="@+id/spec_economy_button"
            android:layout_centerHorizontal="true"
            android:background="#c0c0c0"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
    </RelativeLayout>

    <fragment
        android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.example.arnold.itsosgadda.handlers.NavigationDrawerFragment"
        tools:layout="@layout/drawer_main_navitagion_drawer" />


</android.support.v4.widget.DrawerLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SpecStorySectionActivity">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="2"
            android:gravity="center_vertical|center|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000"
                android:text="@string/i_percorsi"
                android:id="@+id/courses_id"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:background="@drawable/img_lsa"
                android:id="@+id/imageLSA"
                tools:ignore="ContentDescription"
                android:layout_alignTop="@+id/imageMAT"
                android:layout_alignLeft="@+id/imageAFM" />

            <ImageButton
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:id="@+id/imageIT"
                android:background="@drawable/img_it"
                tools:ignore="ContentDescription"
                android:layout_below="@+id/courses_id"
                android:layout_toLeftOf="@+id/imageLSA"
                android:layout_marginRight="40dp" />

            <ImageButton
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:id="@+id/imageAFM"
                android:background="@drawable/img_afm"
                tools:ignore="ContentDescription"
                android:layout_alignTop="@+id/imageIT"
                android:layout_alignLeft="@+id/courses_id"
                android:layout_marginLeft="117dp" />

            <ImageButton
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:id="@+id/imageMAT"
                android:background="@drawable/img_mat"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                tools:ignore="ContentDescription"
                android:layout_below="@+id/imageIT"
                android:layout_alignLeft="@+id/imageIT" />

        </RelativeLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.example.arnold.itsosgadda.handlers.NavigationDrawerFragment"
        tools:layout="@layout/drawer_main_navitagion_drawer" />


</android.support.v4.widget.DrawerLayout>
